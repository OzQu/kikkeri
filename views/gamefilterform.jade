form#criteria(method='get' action='.')
  ul
    li
      input#gameTags(placeholder='Pelin tagit', type='text', name='gameTags' value=query.gameTags)
    li
      input#excludeGameTags(placeholder='Ei näitä tageja', type='text', name='excludeGameTags' value=query.excludeGameTags)
    li
      input#players(placeholder='Pelaajat', type='text' name='players' value=query.players)
    li
      input#excludePlayers(placeholder='Ei näitä pelaajia', type='text' name='excludePlayers' value=query.excludePlayers)
    li
      input#numPlayers(placeholder='Pelaajien lukumäärä', type='number' name='numPlayers' value=query.numPlayers)
    li
      input#since(placeholder='Alkupäivämäärä' type='date' name='since' value=query.since)
    li
      input#until(placeholder='Loppupäivämäärä' type='date' name='until' value=query.until)
    li
      input(value='Suodata' type='submit')

